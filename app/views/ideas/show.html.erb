<h1> The wonderful <%= @idea.title %> idea!</h1>
<%= image_tag @idea.user.avatar.url(:thumb) %>
<p> <%= @idea.body %>

</p>
<hr>
Users that have joined the Idea:
<% @idea.joining_users.each_with_index do |user,i| %>
  <%= user.full_name %><% if i<(@idea.joining_users.length) - 1 %>, <% end %>
<% end %>

<h3> Comments?</h3>
<br>
<% if current_user %>
  <%= form_for [@idea, @comment] do |f| %>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <%= f.submit %>
  <% end %>
<% end %>
<% @idea.comments.each do |comment| %>

  <p><%= image_tag comment.user.avatar.url(:thumb) %><%= comment.user.full_name %> comments: <%= comment.body %></p>
<% end %>
